{% include "header.twig" %}
<div class="container-fluid">
    <h1>{{ site_name }} edit stream:</h1>
    {% for streaminfo in stream %}
    <form method="post" action="{{ admin_endpoint }}forms/editstream.php">
        <input type="hidden" name="id" value="{{ streaminfo.id }}">
        <div class="form-group">
        <label for="stream_name">
            Stream name:
        </label>
        <input name="streamname" maxlength="255" id="stream_name" type="text" class="form-control" value="{{ streaminfo.name }}">
    </div>
        <div class="form-group">
            <label for="stream_description">
                Stream description:
            </label>
            <textarea name="streamdescription" maxlength="2000" id="stream_description" type="text" class="form-control">{{ streaminfo.description }}</textarea>
        </div>
        <div class="form-group">
            <label for="stream_username">
                Stream username (account that runs the stream):
            </label>
            <input name="streamusername" maxlength="255" id="stream_username" type="text" class="form-control" value="{{ streaminfo.username }}">
        </div>
        <div class="form-group">
            <label for="stream_embed">
                Stream embed code (HTML):
            </label>
            <code><textarea name="streamembed" maxlength="1500" id="stream_embed" type="text" class="form-control">{{ streaminfo.embed_code }}</textarea></code>
        </div>
        <div class="form-group">
            <label for="stream_chat_enable">
                Enable chat?
            </label>
            <input type="checkbox" {% if streaminfo.chat_on == true %}checked=""{% endif %} name="enable_chat" id="stream_chat_enable" value="1" type="text">
        </div>
        <div class="form-group">
            <a class="btn btn-info" href="{{ admin_endpoint }}">Back</a>
            <button class="btn btn-dark" name="update_btn" type="submit">Update stream</button>
        </div>
    </form>
    {% endfor %}
    <p>Copyright Â© {{ year }} {{ site_name }}.</p>
</div>
{% include "footer.twig" %}