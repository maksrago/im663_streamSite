{% include "header.twig" %}
<div class="container-fluid">
    <h1>{{ site_name }} edit user:</h1>
        <form method="get" action="{{ admin_endpoint }}forms/updateuserrole.php">
            <div class="form-group">
            <label for="user_name">Username: </label>
                <input style="max-width: 480px;" type="text" class="form-control" maxlength="50" id="user_name" name="username">
            </div>
            <div class="form-group">
                <label for="user_role">
                    User role:
                </label>
                <select style="max-width: 480px;" class="form-control" id="user_role" name="userrole">
                {% for role in user_roles %}
                    <option>{{ role }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <a class="btn btn-info" href="{{ admin_endpoint }}">Back</a>
                <button class="btn btn-dark" name="update_btn" type="submit">Update user</button>
            </div>
        </form>
    <p>Copyright Â© {{ year }} {{ site_name }}.</p>
</div>
{% include "footer.twig" %}